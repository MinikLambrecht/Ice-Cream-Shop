<Window x:Class="IsButik.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IsButik"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="480" ResizeMode="NoResize">
    <Grid>
        <Label Content="Storage" FontFamily="Verdana" FontWeight="Bold" FontSize="20" HorizontalContentAlignment="Center" Margin="150,25,150,0" VerticalAlignment="Top"/>
        <RadioButton Content="Store locally" FontFamily="Verdana" FontSize="16" HorizontalAlignment="Left" Margin="150,64,0,0" VerticalAlignment="Top" Height="18" Width="174" IsChecked="True" GroupName="Storage"/>
        <RadioButton Content="Store In Database" FontFamily="Verdana" FontSize="16" HorizontalAlignment="Left" Margin="150,87,0,0" VerticalAlignment="Top" Height="18" Width="174" IsChecked="False" GroupName="Storage"/>
        <Button Content="Save Settings" FontFamily="Verdana" FontWeight="Bold" FontSize="20" HorizontalAlignment="Left" Margin="150,371,0,0" VerticalAlignment="Top" Width="174" Height="40"/>
    </Grid>
</Window>
